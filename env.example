# ===============================
# App
# ===============================
NODE_ENV=production
PORT=3000

# JWT
JWT_SECRET=super-secret-jwt-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===============================
# Database (Postgres)
# ===============================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=minio_service

DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_URL=postgres://postgres:postgres@db:5432/minio_service

# ===============================
# MinIO
# ===============================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123

MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false

# Buckets / limits
MAX_FILE_SIZE_MB=5
ALLOWED_MIME_TYPES=image/jpeg,image/png,application/pdf

# ===============================
# API security
# ===============================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
